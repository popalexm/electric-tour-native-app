<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <variable
            name="searchViewModel"
            type="com.grandtour.ev.evgrandtour.ui.mainMapsView.search.SearchResultsListViewModel" />

        <variable
            name="viewModel"
            type="com.grandtour.ev.evgrandtour.ui.mainMapsView.MapsViewModel" />

        <variable
            name="presenter"
            type="com.grandtour.ev.evgrandtour.ui.mainMapsView.MapsFragmentContract.Presenter" />
    </data>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

                 <LinearLayout
                     android:id="@+id/topBar"
                     android:layout_height="52dp"
                     android:layout_width="match_parent"
                     android:background="@color/colorPrimary"
                     android:orientation="horizontal"
                     android:paddingEnd="@dimen/margin_small"
                     android:paddingStart="@dimen/margin_small">

                     <android.support.v7.widget.SearchView
                         style="@style/SearchViewStyle"
                         app:theme="@style/SearchViewStyle.ActionBar"
                         android:id="@+id/searchViewCheckpoints"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="start|center_vertical"
                         android:focusable="false"
                         app:queryHint="@string/hint_search_checkpoints">
                     </android.support.v7.widget.SearchView>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="horizontal"
                         android:visibility="@{viewModel.isSearchViewOpen == false ? View.VISIBLE: View.GONE}">

                         <TextView
                             android:layout_width="0dp"
                             android:layout_gravity="center_horizontal"
                             android:layout_height="match_parent"
                             android:layout_weight="0.85"
                             android:gravity="center"
                             android:maxLines="1"
                             android:text="@={viewModel.totalRouteInformation}"
                             android:textColor="@color/colorAccent"
                             android:textSize="16sp"
                             android:textStyle="bold"
                             android:visibility="@{viewModel.isRouteLengthAvailable == true ? View.VISIBLE: View.GONE}" />

                         <ProgressBar
                             android:layout_width="0dp"
                             android:layout_weight="0.15"
                             android:layout_height="match_parent"
                             android:layout_gravity="end|center_vertical"
                             android:padding="@dimen/margin_small"
                             android:visibility="@{viewModel.isLoadingInProgress == true ? View.VISIBLE: View.INVISIBLE}" />
                     </LinearLayout>
                 </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topBar" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topBar"
            android:background="@drawable/dialog_background"
            app:itemBinding="@{searchViewModel.itemBinding}"
            app:items="@{searchViewModel.parameters}"
            app:layoutManager="@{LayoutManagers.linear()}" />

    </RelativeLayout>
</layout>